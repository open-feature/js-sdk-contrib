{
  "name": "flagd-js-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/flagd-js-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/flagd-js-core",
        "main": "libs/shared/flagd-js-core/src/index.ts",
        "tsConfig": "libs/shared/flagd-js-core/tsconfig.lib.json",
        "assets": ["libs/shared/flagd-js-core/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs flagd-js-core {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/flagd-js-core/**/*.ts", "libs/shared/flagd-js-core/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/flagd-js-core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
